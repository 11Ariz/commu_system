rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: users can read/write their own profile
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Chat messages: authenticated users can read; writes must come from the authenticated user
    match /rooms/{roomId}/messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.authorUid == request.auth.uid && request.resource.data.text is string;
      allow delete: if false;
    }

    // Projects: authenticated users may create projects and everyone may read
    match /projects/{projectId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.createdByUid == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.createdByUid == request.auth.uid;

      match /files/{fileId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.createdByUid == request.auth.uid;
        allow delete: if request.auth != null && resource.data.createdByUid == request.auth.uid;
      }
    }

    // Assignments: only teachers may create assignments
    match /assignments/{assignmentId} {
      allow read: if true;
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';

      // Submissions: students create their own submissions; teachers can read and grade
      match /submissions/{submissionId} {
        allow create: if request.auth != null && request.resource.data.authorUid == request.auth.uid;
        allow read: if request.auth != null && (
          // the student who submitted
          resource.data.authorUid == request.auth.uid ||
          // the teacher role
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' ||
          // the assignment creator
          get(/databases/$(database)/documents/assignments/$(assignmentId)).data.createdByUid == request.auth.uid
        );
        // only teachers may update (grade) submissions
        allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
      }
    }

    // Library: items are public reads; uploads require authentication
    match /library/{docId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.createdByUid == request.auth.uid;
      match /files/{fileId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.createdByUid == request.auth.uid;
      }
    }
  }
}
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isTeacher() {
      return isAuthenticated() && userDoc().role == 'teacher';
    }

    function isStudent() {
      return isAuthenticated() && userDoc().role == 'student';
    }

    // Users collection: users can read their own profile and write their own profile.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if false;
    }

    // Chat rooms and messages: authenticated users can read messages; authenticated users can create messages.
    match /rooms/{roomId}/messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.keys().hasAll(['text','author','createdAt'])
        && request.resource.data.text is string
        // author should be the authenticated user's email or uid (best effort)
        && (request.resource.data.author == request.auth.token.email || request.resource.data.author == request.auth.uid || request.resource.data.author is string);
      allow update, delete: if false;
    }

    // Assignments: only teachers can create or modify assignments; students and teachers can read.
    match /assignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();

      // Submissions subcollection: students can create submissions for themselves; teachers can read and grade.
      match /submissions/{submissionId} {
        allow read: if isAuthenticated() && (isTeacher() || resource.data.authorUid == request.auth.uid);
        allow create: if isStudent() && request.resource.data.authorUid == request.auth.uid
          && request.resource.data.keys().hasAll(['authorUid','text','createdAt'])
          && request.resource.data.text is string;
        // Allow teachers to update grade/feedback
        allow update: if isTeacher() || (isAuthenticated() && request.auth.uid == resource.data.authorUid);
        allow delete: if false;
      }
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
