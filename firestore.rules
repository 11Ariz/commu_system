rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isTeacher() {
      return isAuthenticated() && userDoc().role == 'teacher';
    }

    function isStudent() {
      return isAuthenticated() && userDoc().role == 'student';
    }

    // Users collection: users can read their own profile and write their own profile.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if false;
    }

    // Chat rooms and messages: authenticated users can read messages; authenticated users can create messages.
    match /rooms/{roomId}/messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.keys().hasAll(['text','author','createdAt'])
        && request.resource.data.text is string
        // author should be the authenticated user's email or uid (best effort)
        && (request.resource.data.author == request.auth.token.email || request.resource.data.author == request.auth.uid || request.resource.data.author is string);
      allow update, delete: if false;
    }

    // Assignments: only teachers can create or modify assignments; students and teachers can read.
    match /assignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();

      // Submissions subcollection: students can create submissions for themselves; teachers can read and grade.
      match /submissions/{submissionId} {
        allow read: if isAuthenticated() && (isTeacher() || resource.data.authorUid == request.auth.uid);
        allow create: if isStudent() && request.resource.data.authorUid == request.auth.uid
          && request.resource.data.keys().hasAll(['authorUid','text','createdAt'])
          && request.resource.data.text is string;
        // Allow teachers to update grade/feedback
        allow update: if isTeacher() || (isAuthenticated() && request.auth.uid == resource.data.authorUid);
        allow delete: if false;
      }
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
