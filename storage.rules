rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Projects files: allow read to anyone, write only by authenticated users
    match /projects/{projectId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Assignment submissions: readable by authenticated users; writes only by authenticated users
    match /assignments/{assignmentId}/submissions/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Library files
    match /library/{docId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
